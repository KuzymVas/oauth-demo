		{
			"name": "Login",
			"item": [
				{
					"name": "Login as USER",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Get response data and set the token as a global variable",
									"var jsonData = pm.response.json();",
									"pm.globals.set(\"jwtToken\", jsonData.jwt);",
									"console.log(`Succesfully set token: ${pm.globals.get(\"jwtToken\")}`);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "basic",
							"basic": [
								{
									"key": "password",
									"value": "password",
									"type": "string"
								},
								{
									"key": "username",
									"value": "user",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/api/login",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"login"
							]
						}
					},
					"response": []
				},
				{
					"name": "Login as ADMIN",
					"event": [
